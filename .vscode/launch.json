{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "jdk",
            "request": "launch",
            "name": "Launch Java App"
        },
        {
            "type": "android",
            "request": "launch",
            "name": "Android Launch",
            "appSrcRoot": "${workspaceFolder}/clients/android/app/src/main",
            "apkFile": "${workspaceFolder}/clients/android/app/build/outputs/apk/other/debug/SFA-*.apk",
            "adbPath": "${config:android.adbPath}"
        },
        {
            "type": "android",
            "request": "attach",
            "name": "Android Attach",
            "appSrcRoot": "${workspaceFolder}/clients/android/app/src/main",
            "adbPath": "${config:android.adbPath}",
            "processId": "${command:PickAndroidProcess}"
        }
    ]
}